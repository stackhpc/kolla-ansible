{
    "command": "/usr/share/logstash/bin/logstash --log-in-json --log /var/log/kolla/monasca-logstash/monasca-log-transformer.log -f /etc/logstash/conf.d/log-transformer.conf",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/log-transformer.conf",
            "dest": "/etc/logstash/conf.d/log-transformer.conf",
            "owner": "logstash",
            "perm": "0600"
        }
    ],
    "permissions": [
        {
            "path": "/var/log/kolla/monasca-logstash",
            "owner": "logstash:kolla",
            "recurse": true
        }
    ]
}
