global:
  scrape_interval: {{ prometheus_scrape_interval }}
  scrape_timeout: 10s
  evaluation_interval: 15s
{% if prometheus_external_labels %}
  external_labels:
{% for label, value in prometheus_external_labels.items() %}
    {{ label }}: {{ value }}
{% endfor %}
{% endif %}

{% if prometheus_alert_rules.files is defined and prometheus_alert_rules.files | length  > 0 %}
rule_files:
{% for rule in prometheus_alert_rules.files %}
  - "/etc/prometheus/{{ rule.path | basename }}"
{% endfor %}
{% endif %}

scrape_configs:
  - job_name: prometheus
    basic_auth:
      username: admin
      password: "{{ prometheus_password }}"
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_exporter.yaml'

{% if enable_prometheus_node_exporter | bool %}
  - job_name: node
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_node_exporter.yaml'
{% endif %}

{% if enable_prometheus_mysqld_exporter | bool %}
  - job_name: mysqld
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_mysqld_exporter.yaml'
{% endif %}

{% if enable_prometheus_haproxy_exporter | bool %}
  - job_name: haproxy
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_haproxy_exporter.yaml'
{% endif %}

{% if enable_prometheus_rabbitmq_exporter | bool %}
  - job_name: rabbitmq
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_rabbitmq_exporter.yaml'
{% endif %}

{% if enable_prometheus_memcached_exporter | bool %}
  - job_name: memcached
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_memcached_exporter.yaml'
{% endif %}

{% if enable_prometheus_cadvisor | bool %}
  - job_name: cadvisor
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_cadvisor.yaml'
{% endif %}

{% if enable_prometheus_fluentd_integration | bool %}
  - job_name: fluentd
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_fluentd_integration.yaml'
{% endif %}

{% if enable_prometheus_ceph_mgr_exporter | bool %}
  - job_name: ceph_mgr_exporter
    honor_labels: true
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_ceph_mgr_exporter.yaml'
{% endif %}

{% if enable_prometheus_openstack_exporter | bool %}
  - job_name: openstack_exporter
    scrape_interval: {{ prometheus_openstack_exporter_interval }}
    scrape_timeout: {{ prometheus_openstack_exporter_timeout }}
{% if kolla_enable_tls_internal | bool %}
    scheme: https
{% endif %}
    honor_labels: true
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_openstack_exporter.yaml'
{% endif %}

{% if enable_prometheus_elasticsearch_exporter | bool %}
  - job_name: elasticsearch_exporter
    scrape_interval: {{ prometheus_elasticsearch_exporter_interval }}
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_elasticsearch_exporter.yaml'
{% endif %}

{% if enable_prometheus_blackbox_exporter | bool %}
  - job_name: blackbox_exporter
    metrics_path: /probe
    honor_labels: true
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_blackbox_exporter.yaml'
    relabel_configs:
      - source_labels: [__address__]
        regex: (\w+):(\w+):(.+)
        target_label: service
        replacement: ${1}
      - source_labels: [__address__]
        regex: (\w+):(\w+):(.+)
        target_label: __param_module
        replacement: ${2}
      - source_labels: [__param_module]
        target_label: module
      - source_labels: [__address__]
        regex: (\w+):(\w+):(.+)
        target_label: __param_target
        replacement: ${3}
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: '{{ api_interface_address | put_address_in_context('url') }}:{{ prometheus_blackbox_exporter_port }}'
{% endif %}

{% if enable_prometheus_libvirt_exporter | bool %}
  - job_name: libvirt_exporter
    scrape_interval: {{ prometheus_libvirt_exporter_interval }}
    honor_labels: true
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_libvirt_exporter.yaml'
{% endif %}

{% if enable_prometheus_etcd_integration | bool %}
  - job_name: etcd
{% if etcd_enable_tls | bool %}
    scheme: https
{% endif %}
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_etcd_integration.yaml'
{% endif %}

{% if enable_ironic_prometheus_exporter | bool %}
  - job_name: ironic_prometheus_exporter
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-ironic_prometheus_exporter.yaml'
{% endif %}

{% if enable_prometheus_proxysql_exporter | bool %}
  - job_name: proxysql
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_proxysql_exporter.yaml'
{% endif %}

{% if enable_prometheus_alertmanager | bool %}
  - job_name: alertmanager
    file_sd_configs:
    - refresh_interval: 30s
      files:
      - 'file_sd_configs/sd-prometheus_alertmanager.yaml'

alerting:
  alertmanagers:
    - static_configs:
{% for host in groups["prometheus-alertmanager"] %}
      - targets:
        - '{{ 'api' | kolla_address(host) | put_address_in_context('url') }}:{{ hostvars[host]['prometheus_alertmanager_port'] }}'
{% if hostvars[host].prometheus_instance_label | default(false, true) %}
        labels:
          instance: "{{ hostvars[host].prometheus_instance_label }}"
{% endif %}
{% endfor %}
{% endif %}
